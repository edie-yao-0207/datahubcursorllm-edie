{
  "owner": "Sustainability",
  "jobs": [
    {
      "name": "weekly_idling_heatmap_update_us",
      "cron": "0 0 8 ? * Mon",
      "regions": ["us-west-2"],
      "timeout_seconds": 14400,
      "spark_version": "default",
      "driver_node_type_id": "rd-fleet.xlarge",
      "node_type_id": "md-fleet.2xlarge",
      "max_workers": 16,
      "unity_catalog_setting": {
        "data_security_mode": "SINGLE_USER"
      },
      "max_retries": 3,
      "min_retry_interval_seconds": 10,
      "init_scripts": ["install_gdal.sh"]
    },
    {
      "name": "weekly_idling_heatmap_update_eu",
      "cron": "0 0 4 ? * Mon",
      "regions": ["eu-west-1"],
      "timeout_seconds": 14400,
      "spark_version": "default",
      "driver_node_type_id": "rd-fleet.xlarge",
      "node_type_id": "md-fleet.2xlarge",
      "max_workers": 16,
      "unity_catalog_setting": {
        "data_security_mode": "SINGLE_USER"
      },
      "max_retries": 3,
      "min_retry_interval_seconds": 10,
      "init_scripts": ["install_gdal.sh"]
    }
  ]
}

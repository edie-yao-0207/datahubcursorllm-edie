{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "S3 view definition schema",
  "column": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "type": {
        "type": "string"
      },
      "fields": {
        "type": "array",
        "items": { "$ref": "#/column" }
      },
      "description": {
        "type": "string"
      },
      "nullable": {
        "type": "boolean"
      }
    },
    "required": ["name", "type"],
    "additionalProperties": false
  },
  "type": "object",
  "properties": {
    "view": {
      "type": "string",
      "description": "Name of view"
    },
    "owner": {
      "type": "string",
      "description": "Team that is going to own the table"
    },
    "description": {
      "type": "string",
      "description": "Description of table"
    },
    "dependencies": {
      "description": "The other nodes that this node depends on",
      "type": "array",
      "items": {
        "oneOf": [{ "$ref": "#/definitions/table_dependency" }]
      }
    },
    "database": {
      "type": "string",
      "description": "Name of database table will be under"
    },
    "use_regional_values": {
      "type": "boolean",
      "description": "If true, the view's SQL may contain region specific template variables"
    },
    "schema": {
      "type": "array",
      "description": "Array of column objects containing name, type, and other columns",
      "items": {
        "$ref": "#/column"
      }
    },
    "regions": {
      "type": "array",
      "description": "Define the view in select AWS regions. Deploy to all regions by default if not specified.",
      "items": {
        "type": "string",
        "enum": ["us-west-2", "eu-west-1", "ca-central-1"],
        "minItems": 1
      }
    }
  },
  "required": ["owner", "description", "database", "schema"],
  "additionalProperties": false,

  "definitions": {
    "table_dependency": {
      "name": "table dependency",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "dbname": {
          "type": "string"
        },
        "language": {
          "type": "string",
          "enum": ["python", "sql"]
        },
        "schema_path": {
          "type": "string"
        },
        "tablename": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["table"]
        },
        "external": {
          "type": "boolean"
        }
      },
      "required": ["dbname", "tablename", "type"],
      "additionalProperties": false
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dagster Job Configuration",
  "description": "Schema for ML project job configuration files",
  "type": "object",
  "required": ["name", "owner", "regions"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Job name (must match filename without .json extension)",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "owner": {
      "type": "string",
      "description": "Team or individual responsible for the job",
      "examples": ["DataEngineering", "MLTeam"]
    },
    "regions": {
      "type": "array",
      "description": "AWS regions where this job should run",
      "items": {
        "type": "string",
        "enum": ["us-west-2", "eu-west-1", "ca-central-1"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "description": {
      "type": "string",
      "description": "Optional description of what the job does"
    },
    "op_name": {
      "type": "string",
      "description": "Base op name to use (without _op suffix). Used when multiple jobs share the same op.",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "ops": {
      "type": "array",
      "description": "List of ops to run in sequence (without _op suffix)",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9_]*$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "orgs": {
      "type": "array",
      "description": "List of organization IDs to process",
      "items": {
        "type": "integer",
        "minimum": 1
      },
      "minItems": 1
    },
    "assets": {
      "type": "array",
      "description": "Asset keys for asset-based jobs (format: 'database.table' or 'region:database.table')",
      "items": {
        "type": "string",
        "pattern": "^([a-z_]+:)?[a-z_]+\\.[a-z_]+$"
      },
      "minItems": 1
    },
    "schedules": {
      "type": "array",
      "description": "List of schedules for this job",
      "items": {
        "type": "object",
        "required": ["name", "cron"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Schedule name (e.g., 'daily', 'hourly')"
          },
          "cron": {
            "type": "string",
            "description": "Cron expression (5-field format)",
            "pattern": "^[0-9*,/-]+\\s+[0-9*,/-]+\\s+[0-9*,/-]+\\s+[0-9*,/-]+\\s+[0-9*,/-]+$"
          }
        },
        "additionalProperties": false
      }
    },
    "container_config": {
      "type": "object",
      "description": "Kubernetes container resource configuration",
      "properties": {
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m|\\.[0-9]+)?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m|\\.[0-9]+)?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$"
                }
              }
            }
          }
        }
      }
    },
    "max_concurrent": {
      "type": "integer",
      "description": "Maximum number of concurrent executions",
      "minimum": 1
    }
  },
  "additionalProperties": false,
  "oneOf": [
    {
      "description": "Op-based job (uses ops or op_name)",
      "anyOf": [{ "required": ["ops"] }, { "required": ["op_name"] }]
    },
    {
      "description": "Asset-based job (uses assets)",
      "required": ["assets"]
    }
  ]
}
